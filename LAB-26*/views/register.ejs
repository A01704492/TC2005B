<%- include('includes/head.ejs') %>

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    </head>
    <style>
        form, h3{
            padding-left: 20px;
            padding-top: 20px;
        }
    </style>
    <body>
        <h3>Registrar nueva escudería</h3>

        <form action="/register" method="POST"> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

            <div class="mb-3">
                <label for="nombre" class="form-label">Escudería</label>
                <input required type="text" name="nombre" class="form-control" placeholder="Ingresa la escudería a registrar" style="width: 1400px;">
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción</label>
                <input type="text" name="descripcion" class="form-control" placeholder="Ingresa la descripción de la escudería" style="width: 1400px;">
            </div>
            
            <div class="mb-3">
                <label for="imagen" class="form-label">Imagen</label>
                <input type="text" name="imagen" class="form-control" placeholder="Ingresa el link de una imagen de la escudería" style="width: 1400px;">
            </div><br>

            <input class="btn btn-success" type="submit" value="Confirmar">
        </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>
</html>